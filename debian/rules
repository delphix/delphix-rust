%:
	dh $@

override_dh_install:
	./scripts/fetch-and-run-installer.sh "1.54.0" "/usr" "debian/tmp"

	dh_install --autodest "debian/tmp/*"

override_dh_strip:
	# Skip this step; use artifacts from Rust tarball as-is.
